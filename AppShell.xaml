<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="TheQuizzyApp.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:local="clr-namespace:TheQuizzyApp"
	xmlns:views="clr-namespace:TheQuizzyApp.Views">
	
    <ShellContent
		Title="Main"
		ContentTemplate="{DataTemplate views:PlayerSelectionPage}"
		Route="MainPage"
		Shell.NavBarIsVisible="False" />


    <ShellContent
        Title="Player Selection"
        ContentTemplate="{DataTemplate views:PlayerSelectionPage}"
        Route="PlayerSelectionPage"/>
    

    <ShellContent
        Title="Game Page"
        ContentTemplate="{DataTemplate views:GamePage}"
        Route="GamePage"/>

    <ShellContent 
        Title="Round Score"
        ContentTemplate="{DataTemplate views:ScorePage}"
        Route="ScorePage"/>

    <ShellContent 
        Title="Game Score"
        ContentTemplate="{DataTemplate views:GameScorePage}"
        Route="GameScorePage"/>

</Shell>
