<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="TheQuizzyApp.Views.ScorePage"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:vm="clr-namespace:TheQuizzyApp.ViewModels"
	x:DataType="vm:ScoreViewModel">

	<ScrollView>
		<VerticalStackLayout
			Padding="30,0"
			Spacing="25">

            <Label
                SemanticProperties.HeadingLevel="Level1"
                Style="{StaticResource Headline}"
                Text="Score Page"
                />

            <Label
				SemanticProperties.HeadingLevel="Level1"
				Style="{StaticResource Headline}"
				Text="Taber" />



            <Button 
                Command="{Binding RestartGameCommand}"
                HorizontalOptions="Fill"
                SemanticProperties.Hint="Restart the game"
                Text="{Binding RestartBtn}"/>

            <Button
				Command="{Binding CancledCommand}"
				HorizontalOptions="Fill"
				SemanticProperties.Hint="Cancle"
				Text="{Binding CancleBtn}" />
            
            

		</VerticalStackLayout>
	</ScrollView>
</ContentPage>
